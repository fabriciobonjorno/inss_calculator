<div class="row g-0 app-auth-wrapper">
  <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5 d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="d-flex flex-column align-content-end">
      <div class="app-auth-body mx-auto">
        <div class="app-auth-branding mb-4">
          <a class="app-logo" href="<%= root_path %>">
            <%= image_tag 'inss-logo.png', class: "logo-icon me-2" %>
          </a>
        </div>
        <h2 class="auth-heading text-center mb-5">Logar no Portal</h2>
        <div class="auth-form-container text-start">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "auth-form auth-signup-form") do |f| %>
            <div class="email mb-3">
              <%= f.email_field :email, autofocus: true, 
                                        class: "form-control signin-email", 
                                        placeholder: "Email", 
                                        required: true, 
                                        autocomplete: "email" %>
            </div>
            <div class="password mb-3">
              <%= f.password_field :password, 
                                    autocomplete: "current-password",
                                    class: "form-control signin-password", 
                                    placeholder: "Senha",
                                    required: true %>
              <div class="extra mt-3 row justify-content-between">
                <div class="col-6">
                  <div class="form-check">
                    <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me, class: "form-check-input" %>
                      <%= f.label :remember_me, class: "form-check-label" %>
                    <% end %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="forgot-password text-end">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "Log In",  class: "btn app-btn-primary w-100 theme-btn mx-auto"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
    <div class="auth-background-holder">
    </div>
    <div class="auth-background-mask"></div>
    <div class="auth-background-overlay p-3 p-lg-5">
      <div class="d-flex flex-column h-100 justify-content-between">
        <div class="d-flex justify-content-center align-items-center flex-grow-1">
          <%= image_tag 'caculadora-INSS.png', class: 'img-fluid' %>
        </div>
        <div class="overlay-content p-3 p-lg-4 rounded">
          <h5 class="mb-3 overlay-title">Calcule o valor do seu Inss</h5>
          <div>
            Calcule facilmente o valor do seu INSS com base no seu sal√°rio.
          </div>
        </div>
      </div>
    </div>
  </div>
